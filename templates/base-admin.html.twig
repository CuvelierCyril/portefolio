                    <a class="nav-link{% if app.request.get('_route') == 'admin-dashboard' %} active{% endif %}" href="{{ path('admin-dashboard') }}">Tableu de bord</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if app.request.get('_route') == 'admin-messages' %} active{% endif %}" href="{{ path('admin-messages', {page : 1}) }}">Messages</a>
                </li>
                <li class="nav-item">Logo Ã  voir</li>
                <li class="nav-item">
                    <a class="nav-link{% if app.request.get('_route') == 'experience' %} active{% endif %}" href="#">Jesaispas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if app.request.get('_route') == 'index' %} active{% endif %}" href="{{ path('index') }}">Site public</a>
                </li>
            </ul>
            {% block body %}{% endblock %}
        </div>
        <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
